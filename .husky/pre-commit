#!/bin/sh

echo "ðŸš€ Running pre-commit checks..."

# Prevent using --no-verify to bypass hooks
if [ "$HUSKY_GIT_PARAMS" = "--no-verify" ]; then
  echo "âŒ ERROR: Skipping Husky hooks is not allowed!" >&2
  exit 1
fi

# Ensure there are staged files before running lint-staged
if git diff --cached --quiet; then
  echo "âš ï¸ No staged files found. Skipping lint-staged checks." >&2
  exit 0  # Allow commit but skip Husky checks
fi

# Run lint-staged with explicit error logging
if ! pnpm run lint-staged; then
  echo ""
  echo "âŒ PRE-COMMIT FAILED ðŸš¨" >&2
  echo "ðŸ”´ Linting or formatting issues detected!" >&2
  echo "ðŸ› ï¸ Run: pnpm run lint:fix to fix the issues." >&2
  echo "ðŸ“– Need help? Check errors in the terminal." >&2
  exit 1  # Block commit
fi

echo "âœ… Pre-commit checks passed! ðŸŽ‰"
