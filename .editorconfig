# EditorConfig helps maintain consistent coding styles across editors and IDEs
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown & JSON files should not trim trailing spaces (needed for formatting)
[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2

# YAML files
[*.yml]
indent_size = 2

# TypeScript & JavaScript
[*.{js,jsx,ts,tsx}]
indent_size = 2
insert_final_newline = true

# CSS, SCSS, and Tailwind
[*.{css,scss}]
indent_size = 2

# Ignore binary files
[*.{png,jpg,jpeg,gif,ico,svg}]
indent_style = none
